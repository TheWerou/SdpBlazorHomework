<h> MoneyConverter </h>
<div class="form-group">
    <div class="col-md-4">
        <div class="form-group">
            <label> Currency </label>
            <input type="number" class="form-control" placeholder="Amount of money in $" @bind="Dolars" />

        </div>
        <div class="form-group">
            <label>Money Converter</label>
            <input type="number" class="form-control" placeholder="Value converter" @bind="MonConverter" />

        </div>
    </div>
    <button class="btn btn-primary" @onclick="CalcCash">
        <span class="oi oi-clock"></span> Convert curency
    </button>
    @if (Pln != null)
    {
        <div class="row blockquote mt-5">
            <span> @Dolars USD in PLN is @Pln PLN</span>

        </div>
    }


</div>

@code {
    public double? MonConverter  { get; set; }
    public double? Dolars { get; set; }
    public double? Pln = null;


    private void CalcCash()
    {
        if(MonConverter != 0)
        {
            Pln = Dolars * MonConverter;
        }
        else
        {
            Pln = Dolars * 3.96;
        }
    }
}
